<div class="user-center">
    <div class="header">
        <img src="{{avatar}}" alt="">
        <span>{{username}}</span>
    </div>
    <div class="content">
        <ul>
            <li class="item">
                <span class="label">
                    <i class="iconfont icon-phone"></i>手机
                </span>
                <span class="text">
                    {{phone}}
                </span>
            </li>
            <li class="item">
                <span class="label">
                    <i class="iconfont icon-Mail"></i>电子邮件
                </span>
                <span class="text">
                    {{email}}
                </span>
            </li>
            <li class="item">
                <span class="label">
                    <i class="iconfont icon-order"></i>订单数
                </span>
                <span class="text">
                    {{orderNum}}
                </span>
            </li>
            <li class="item">
                <span class="label">
                    <i class="iconfont icon-time"></i>注册时间
                </span>
                <span class="text">
                    {{registerTime}}
                </span>
            </li>                                      
        </ul>
    </div>
</div>