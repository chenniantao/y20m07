<div class="user-base">
    <div class="header">
        <img src="{{avatar}}" alt="">
        <input type="file" class="upload-file">
        <a href="javascript:;" class="btn btn-upload"><i class="iconfont icon-upload">上传图像</i></a>
    </div>
    <div class="content">
        <ul class="form-box">
            <li class="item">
                <div class="form-item">
                    <label for="" class="form-lable">
                        <i class="iconfont icon-user"></i>
                    </label>
                    <input type="text" value="{{username}}" class="form-content" name="username" placeholder="请输入用户名">
                    <a href="javascript:;" class="btn btn-username">修改</a>
                </div>
            </li>             
            <li class="item">
                <div class="form-item">
                    <label for="" class="form-lable">
                        <i class="iconfont icon-Mail"></i>
                    </label>
                    <input type="text" value="{{email}}" class="form-content" name="email" placeholder="请输入电子邮件">
                    <a href="javascript:;" class="btn btn-email">修改</a>
                </div>
            </li>                                     
        </ul>
    </div>
</div>